@model StokTakip.Models.Musteriler

@{
    ViewBag.Title = "YENİ MÜŞTERİ EKLE";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container mt-4">
        <h4 class="mb-3">Yeni Müşteri Ekle</h4>
        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="mb-3">
            @Html.LabelFor(model => model.Adi, new { @class = "form-label" })
            @Html.EditorFor(model => model.Adi, new { htmlAttributes = new { @class = "form-control", placeholder = "Müşteri adını girin" } })
            @Html.ValidationMessageFor(model => model.Adi, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.Soyadi, new { @class = "form-label" })
            @Html.EditorFor(model => model.Soyadi, new { htmlAttributes = new { @class = "form-control", placeholder = "Müşteri soyadını girin" } })
            @Html.ValidationMessageFor(model => model.Soyadi, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.Telefon, new { @class = "form-label" })
            @Html.EditorFor(model => model.Telefon, new { htmlAttributes = new { @class = "form-control", placeholder = "Müşteri telefon numarası" } })
            @Html.ValidationMessageFor(model => model.Telefon, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.Borc, new { @class = "form-label" })
            @Html.EditorFor(model => model.Borc, new { htmlAttributes = new { @class = "form-control", placeholder = "Müşteri borcu girin" } })
            @Html.ValidationMessageFor(model => model.Borc, "", new { @class = "text-danger" })
        </div>

        <div class="d-flex justify-content-between">
            <input type="submit" value="Müşteri Ekle" class="btn btn-success" />
            <a href="@Url.Action("Index")" class="btn btn-secondary">İptal</a>
        </div>
    </div>
}

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
