@model StokTakip.Models.Musteriler

@{
    ViewBag.Title = "MÜŞTERİ DETAYLARI";
}

<div class="container mt-4">
    <h4 class="mb-3">Müşteri Detayları</h4>
    <hr />

    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.Adi)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Adi)</dd>

                <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.Soyadi)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Soyadi)</dd>

                <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.Telefon)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Telefon)</dd>

                <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.Borc)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Borc) ₺</dd>
            </dl>
        </div>
    </div>

    <div class="mt-3 d-flex justify-content-between">
        <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-primary">Düzenle</a>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Listeye Dön</a>
    </div>
</div>
