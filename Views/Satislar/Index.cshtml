@model IEnumerable<StokTakip.Models.Satislar>

@{
    ViewBag.Title = "SATIŞLAR";
}

<div class="container table-responsive">
    @Html.ActionLink("Yeni Satış Ekle", "Create", null, new { @class = "btn btn-success my-2" })
    <table class="table table-striped table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Musteri.Adi)</th>
                <th>@Html.DisplayNameFor(model => model.Urun.UrunAdi)</th>
                <th>@Html.DisplayNameFor(model => model.Adet)</th>
                <th>@Html.DisplayNameFor(model => model.Tarih)</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody class="table-info">
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Musteri.Adi)</td>
                    <td>@Html.DisplayFor(modelItem => item.Urun.UrunAdi)</td>
                    <td>@Html.DisplayFor(modelItem => item.Adet)</td>
                    <td>@Html.DisplayFor(modelItem => item.Tarih)</td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-sm btn-primary">Düzenle</a>
                        <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-sm btn-info">Detaylar</a>
                        <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-sm btn-danger">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>