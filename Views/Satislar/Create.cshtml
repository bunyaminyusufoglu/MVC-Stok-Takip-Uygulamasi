@model StokTakip.Models.Satislar

@{
    ViewBag.Title = "YENİ SATIŞ EKLE";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container mt-4">
        <h4 class="mb-3">Yeni Satış Ekle</h4>
        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="mb-3">
            @Html.LabelFor(model => model.MusteriId, "Müşteri Girin", htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.DropDownList("MusteriId", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.MusteriId, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.UrunId, "Ürün Girin", htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.DropDownList("UrunId", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.UrunId, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.Adet, new { @class = "form-label" })
            @Html.EditorFor(model => model.Adet, new { htmlAttributes = new { @class = "form-control", placeholder = "Satış adeti girin" } })
            @Html.ValidationMessageFor(model => model.Adet, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.Tarih, new { @class = "form-label" })
            @Html.EditorFor(model => model.Tarih, new { htmlAttributes = new { @class = "form-control", placeholder = "Satış tarihi girin" } })
            @Html.ValidationMessageFor(model => model.Tarih, "", new { @class = "text-danger" })
        </div>

        <div class="d-flex justify-content-between">
            <input type="submit" value="Satış Ekle" class="btn btn-success" />
            <a href="@Url.Action("Index")" class="btn btn-secondary">İptal</a>
        </div>
    </div>
}

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
