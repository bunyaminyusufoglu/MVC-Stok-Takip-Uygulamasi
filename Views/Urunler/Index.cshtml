@model IEnumerable<StokTakip.Models.Urunler>

@{
    ViewBag.Title = "ÜRÜNLER";
}

<div class="container table-responsive">
    @Html.ActionLink("Yeni Ürün Ekle", "Create", null, new { @class = "btn btn-success my-2" })
    <table class="table table-striped table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.UrunAdi)</th>
                <th>@Html.DisplayNameFor(model => model.UrunKodu)</th>
                <th>@Html.DisplayNameFor(model => model.Fiyat)</th>
                <th>@Html.DisplayNameFor(model => model.Stok)</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody class="table-info">
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.UrunAdi)</td>
                    <td>@Html.DisplayFor(modelItem => item.UrunKodu)</td>
                    <td>@Html.DisplayFor(modelItem => item.Fiyat)</td>
                    <td>@Html.DisplayFor(modelItem => item.Stok)</td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-sm btn-primary">Düzenle</a>
                        <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-sm btn-info">Detaylar</a>
                        <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-sm btn-danger">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
