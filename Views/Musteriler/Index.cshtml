@model IEnumerable<StokTakip.Models.Musteriler>

@{
    ViewBag.Title = "MÜŞTERİLER";
}

<div class="container table-responsive">
    @Html.ActionLink("Yeni Müşteri Ekle", "Create", null, new { @class = "btn btn-success my-2" })
    <table class="table table-striped table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Adi)</th>
                <th>@Html.DisplayNameFor(model => model.Soyadi)</th>
                <th>@Html.DisplayNameFor(model => model.Telefon)</th>
                <th>@Html.DisplayNameFor(model => model.Borc)</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody class="table-info">
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Adi)</td>
                    <td>@Html.DisplayFor(modelItem => item.Soyadi)</td>
                    <td>@Html.DisplayFor(modelItem => item.Telefon)</td>
                    <td>@Html.DisplayFor(modelItem => item.Borc) ₺</td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-sm btn-primary">Düzenle</a>
                        <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-sm btn-info">Detaylar</a>
                        <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-sm btn-danger">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
